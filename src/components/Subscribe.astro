---
import SubscribeInput from './SubscribeInput.astro'

const { tag } = Astro.props
---

<section id="subscribe" class="overflow-hidden py-20">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 items-center gap-16 md:grid-cols-2">
      {/* Mobile Image */}
      <div class="md:hidden">
        <img src="/images/ab84d7bf-c375-4f4e-8cf0-7aa3510a1064.webp" alt="Hand pointing towards the subscription form" class="w-full -rotate-45" loading="lazy" />
      </div>
      {/* Text and Form */}
      <div class="space-y-6 text-center md:text-left">
        <h2 class="text-5xl font-bold lg:text-6xl">Subscribe to NGM</h2>
        <p class="text-lg text-neutral-400">Stay in the loop with Nomad Gossip Newsletters.</p>
        <SubscribeInput {tag} />
        {/* Stats - visible on desktop */}
        <div class="flex flex-col items-center gap-y-12 pt-10 md:flex-row md:gap-x-12 md:gap-y-0">
          <div class="md:text-left">
            <p class="text-5xl font-bold">+500</p>
            <p class="mt-1 text-neutral-400">Subscribers</p>
          </div>
          <div class="md:text-left">
            <p class="text-5xl font-bold">48.4%</p>
            <p class="mt-1 text-neutral-400">Av. Open Rate</p>
          </div>
        </div>
      </div>
      {/* Desktop Image */}
      <div class="hidden md:block">
        <img src="/images/ab84d7bf-c375-4f4e-8cf0-7aa3510a1064.webp" alt="Hand pointing towards the subscription form" class="w-full" loading="lazy" />
      </div>
    </div>
  </div>
</section>
