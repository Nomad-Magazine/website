<style>
  .loader-container {
    text-align: center;
    background: white;
    padding: 60px 40px;
    border-radius: 16px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    max-width: 500px;
    width: 90%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 200px;
  }
  
  .loading-spinner {
    width: 60px;
    height: 60px;
    border: 3px solid #f0f0f0;
    border-radius: 50%;
    border-top-color: #f4dc01;
    animation: spin 1.2s linear infinite;
    margin-bottom: 24px;
  }
  
  .loading-stars {
    font-size: 32px;
    margin-bottom: 16px;
    animation: pulse 2s ease-in-out infinite;
    letter-spacing: 8px;
  }
  
  .loading-text {
    font-size: 18px;
    font-weight: 500;
    color: #666;
    animation: fade 3s ease-in-out infinite;
    max-width: 280px;
    line-height: 1.4;
  }
  
  @keyframes spin {
    to { transform: rotate(360deg); }
  }
  
  @keyframes pulse {
    0%, 100% { 
      opacity: 0.6; 
      transform: scale(0.95); 
    }
    50% { 
      opacity: 1; 
      transform: scale(1.05); 
    }
  }
  
  @keyframes fade {
    0%, 100% { opacity: 0.7; }
    50% { opacity: 1; }
  }
</style>

<div class="loader-container">
  <div class="loading-spinner"></div>
