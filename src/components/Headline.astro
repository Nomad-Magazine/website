---
type Props = {
  title: string
  description: string
}

const { title, description } = Astro.props
---

<div class="mx-auto max-w-2xl text-center">
  <h2 class="text-4xl font-semibold tracking-tight text-white sm:text-5xl">
    {title}
  </h2>
  <p class="mt-4 text-lg text-neutral-400">
    {description}
  </p>
</div>
