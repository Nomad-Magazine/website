---
interface Props {
  stats: { value: string; label: string }[]
}

const { stats }: Props = Astro.props
---

<div class="py-12">
  <div class="mx-auto max-w-4xl px-4">
    <div class="grid grid-cols-1 gap-8 text-center sm:grid-cols-3">
      {
        stats.map((stat) => (
          <div>
            <div class="text-5xl font-semibold text-gray-400">{stat.value}</div>
            <div class="mt-2 text-lg text-gray-400">{stat.label}</div>
          </div>
        ))
      }
    </div>
  </div>
</div>
