<section id="mission-section" class="relative flex min-h-screen items-center justify-center overflow-hidden">
  <div animate-fade-in-up class="relative z-10 container mx-auto px-4 text-center opacity-0">
    <p class="font-justme mb-8 text-6xl">Our mission</p>
    <h2 class="mx-auto max-w-6xl text-5xl leading-tight font-bold md:text-7xl">
      New type of travel magazine.
      <br />
      The voice of the global digital nomad community.
    </h2>
  </div>
  <!-- Dots groups, both start at center -->
  <div id="top-right-dots" class="dot-group absolute top-1/2 left-1/2 transition-all duration-1000">
    <div class="flex flex-col items-center space-y-4">
      <div class="flex space-x-4">
        <div class="dot rounded-full bg-black"></div>
        <div class="dot rounded-full bg-black"></div>
      </div>
      <div class="dot -mr-16 rounded-full bg-black"></div>
    </div>
  </div>
  <div id="bottom-left-dots" class="dot-group absolute top-1/2 left-1/2 transition-all duration-1000">
    <div class="flex flex-col items-center space-y-4">
      <div class="dot -ml-16 rounded-full bg-black"></div>
      <div class="flex space-x-4">
        <div class="dot rounded-full bg-black"></div>
        <div class="dot rounded-full bg-black"></div>
      </div>
    </div>
  </div>
  <style>
    .dot {
      width: 40px;
      height: 40px;
    }
    .dot-group {
      transform: translate(-50%, -50%);
      opacity: 1;
      z-index: 5;
    }
    .dot-group.move-top-right {
      top: 0rem;
      left: auto;
      right: 0.6rem;
      transform: none;
    }
    .dot-group.move-bottom-left {
      top: auto;
      bottom: 0rem;
      left: 0.6rem;
      transform: none;
    }
    @media screen and (min-width: 768px) {
      .dot-group.move-top-right {
        top: 2rem;
        left: auto;
        right: 2rem;
        transform: none;
      }
      .dot-group.move-bottom-left {
        top: auto;
        bottom: 2rem;
        left: 2rem;
        transform: none;
      }
    }
  </style>
</section>

<script>
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          const topRightDots = document.getElementById('top-right-dots')
          const bottomLeftDots = document.getElementById('bottom-left-dots')
          if (topRightDots) topRightDots.classList.add('move-top-right')
          if (bottomLeftDots) bottomLeftDots.classList.add('move-bottom-left')
          observer.unobserve(entry.target)
        }
      })
    },
    { threshold: 0.3 },
  )

  const missionSection = document.getElementById('mission-section')
  if (missionSection) observer.observe(missionSection)
</script>
