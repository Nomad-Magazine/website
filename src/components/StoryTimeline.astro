              <div class="timeline_circle" />
            </div>
            <div id="w-node-d5abcf1f-3370-3eea-ccfd-66f076babfe6-23ed97d3" class="timeline_right z-[40]">
              <div class="margin-bottom-xlarge">
                <div class="timeline_text flex items-center gap-2">
                  {event.title === 'Pitch' && <MdiMicrophone class="size-5" />}
                  {event.title}
                </div>
                {event.linkText && (
                  <a href={event.link} target="_blank" class="mt-4 flex cursor-pointer flex-row flex-wrap items-center gap-x-2 text-gray-400">
                    <span class="underline">{event.linkText}</span>
                    <MdiExternalLink class="size-4" />
                  </a>
                )}
                <div class="timeline_sub_text mt-4 text-sm text-gray-400" set:html={event.content} />
              </div>
              <div class="timeline_image-wrapper">
                {event.images ? (
                  <div class="space-y-4">
                    {event.images.map((img) => (
                      <div>
                        {typeof img === 'string' ? (
                          <img src={img} loading="lazy" width="480" />
                        ) : (
                          <a href={img.link} target="_blank">
                            <img src={img.src} loading="lazy" width="480" class="cursor-pointer" />
                          </a>
                        )}
                      </div>
                    ))}
                  </div>
                ) : (
                  <div>
                    {(event.imageLink || event.link) ? (
                      <a href={event.imageLink || event.link} target="_blank">
                        <img src={event.image} loading="lazy" width="480" class="cursor-pointer" />
                      </a>
                    ) : (
                      <img src={event.image} loading="lazy" width="480" />
                    )}
                  </div>
                )}
