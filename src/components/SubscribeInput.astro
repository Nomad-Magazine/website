  <form action="https://track.bentonow.com/forms/1685a00cdc1fc329724616bec1de09c6/$subscribe?hardened=true" method="POST" enctype="multipart/form-data" target="_blank" class:list={['flex flex-col items-stretch gap-3 sm:flex-row sm:items-center sm:gap-2', formClass]}>
