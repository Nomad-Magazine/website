---
const issues = [
  {
    title: "New Edition: See What's Inside",
    imageUrl: '/images/third-edition-cover-hd.webp',
    alt: 'Mind, Body, Tech for Nomad Life',
    link: '/editions/third-edition',
    linkText: "New Edition: See What's Inside",
  },
  {
    title: 'Available in print & digital',
    imageUrl: '/images/edition-002-cover.webp',
    alt: 'Inside Remote Communities',
    link: '/editions/second-edition',
    linkText: 'Download Sample',
    sampleUrl: '/free-weekly-articles',
  },
  {
    title: 'Available in print & digital',
    imageUrl: '/images/first-edition-cover-hd.webp',
    alt: 'Digital Nomadism',
    link: '/editions/first-edition',
    linkText: 'Download Sample',
    sampleUrl: '/free-article-what-not-to-do-on-first-date',
  },
]
---

<section class="magazine-issues px-4 py-20 md:px-8">
  <div class="container mx-auto">
    <div class="grid grid-cols-1 gap-12 md:grid-cols-3">
      {
        issues.map((issue) => (
          <div class="issue-card text-center">
            <a href={issue.link}>
              <img src={issue.imageUrl} alt={issue.alt} class="mb-6 aspect-[3/4] h-auto w-full max-w-full object-cover shadow-lg shadow-white" />
              <h3 class="text-lg font-semibold text-yellow-400">{issue.title}</h3>
            </a>
            {issue.sampleUrl && (
              <a href={issue.sampleUrl} class="mt-2 inline-block text-white underline">
                {issue.linkText}
              </a>
            )}
          </div>
        ))
      }
    </div>
  </div>
</section>
