---
import xIcon from '~icons/mdi/twitter?raw&width=24px'
import youtubeIcon from '~icons/mdi/youtube?raw&width=24px'
import linkedInIcon from '~icons/mdi/linkedin?raw&width=24px'
import facebookIcon from '~icons/mdi/facebook?raw&width=24px'
import instagramIcon from '~icons/mdi/instagram?raw&width=24px'

const socialLinks = [
  { name: 'X', href: 'https://twitter.com/nomadgossipmag', icon: xIcon },
  { name: 'Facebook', href: 'https://www.facebook.com/nomadgossip/', icon: facebookIcon },
  { name: 'Youtube', href: 'https://www.youtube.com/@Nomad-Magazine', icon: youtubeIcon },
  { name: 'Instagram', href: 'https://www.instagram.com/nomadmagazinecom/', icon: instagramIcon },
  { name: 'LinkedIn', href: 'https://www.linkedin.com/company/ngm-nomad-gossip-magazine/', icon: linkedInIcon },
]
---

<div animate-fade-in-up class="opacity-0">
  <div class="relative">
    <img src="/images/paper-cut.webp" alt="" class="w-full" loading="lazy" />
  </div>
  <footer class="border-t-2 border-gray-900 bg-white px-4 py-12 font-sans shadow-lg">
    <div class="mx-auto hidden max-w-7xl md:block">
      <div class="mb-12 flex items-center justify-between">
        <img decoding="async" loading="lazy" src="/logo.svg" alt="n::.m" class="h-6" />
        <div class="flex gap-3">
          {
            socialLinks.map((link) => (
              <a
                href={link.href}
                set:html={link.icon}
                aria-label={link.name}
                class="rounded-lg bg-gray-900 px-3 py-3 text-white shadow-md transition-colors duration-200 hover:bg-yellow-500 hover:text-black"
              />
            ))
          }
        </div>
      </div>
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-6 text-gray-900">
          <span class="text-lg font-bold">© 2025 MediaPath OÜ</span>
          <a href="/privacy-policy" class="font-semibold text-gray-900 transition-colors hover:text-yellow-600 hover:underline">Privacy Policy</a>
          <a href="/terms-and-conditions" class="font-semibold text-gray-900 transition-colors hover:text-yellow-600 hover:underline">Terms&Conditions</a>
          <a href="/blog" class="font-semibold text-gray-900 transition-colors hover:text-yellow-600 hover:underline">Blog</a>
        </div>
        <div class="font-semibold text-gray-900">
          <a target="_blank" href="https://curves.digital" class="text-gray-900 transition-colors hover:text-yellow-600 hover:underline"> design by CURVES (~.~) </a>, <a
            target="_blank"
            href="https://rishi.app"
            class="text-gray-900 transition-colors hover:text-yellow-600 hover:underline"
          >
            dev by Rishi
          </a>
        </div>
      </div>
    </div>
    <div class="mx-auto flex max-w-6xl flex-col items-start gap-8 text-left md:hidden">
      <span class="text-4xl font-black tracking-wider">n::.m</span>
      <div class="flex gap-4">
        {
          socialLinks.map((link) => (
            <a
              href={link.href}
              set:html={link.icon}
              aria-label={link.name}
              class="rounded-lg bg-gray-900 px-4 py-4 text-white shadow-md transition-colors duration-200 hover:bg-yellow-500 hover:text-black"
            />
          ))
        }
      </div>
      <span class="text-lg font-bold text-gray-900">design & dev by CURVES (~.~)</span>
      <div class="flex flex-col items-start gap-4">
        <a href="/privacy-policy" class="text-lg font-semibold text-gray-900 transition-colors hover:text-yellow-600 hover:underline">Privacy Policy</a>
        <a href="/terms-and-conditions" class="text-lg font-semibold text-gray-900 transition-colors hover:text-yellow-600 hover:underline">Terms&Conditions</a>
        <a href="/blog" class="text-lg font-semibold text-gray-900 transition-colors hover:text-yellow-600 hover:underline">Blog</a>
      </div>
      <span class="text-lg font-bold">© 2025 MediaPath OÜ</span>
    </div>
  </footer>
</div>
