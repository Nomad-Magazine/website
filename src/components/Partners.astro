---

<section class="py-20">
  <div class="container mx-auto px-4 text-center">
    <h2 class="mb-16 text-5xl font-bold">Our Partners</h2>
    <div class="grid grid-cols-2 items-center justify-items-center gap-x-8 gap-y-12 md:grid-cols-3 lg:grid-cols-4">
      {
        partners.map((partner) => (
          <a href={partner.url} target="_blank" rel="noopener noreferrer" class="flex items-center justify-center">
            <img
              src={partner.logo}
              alt={`${partner.name} logo`}
              class="h-12 min-h-[48px] w-auto max-w-[150px] min-w-[100px] object-contain grayscale transition duration-300 hover:grayscale-0"
            />
          </a>
        ))
      }
    </div>
  </div>
</section>
