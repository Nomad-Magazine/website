---
const partners = [
  { name: 'Mapmelon', url: 'https://www.mapmelon.com/', logo: '/images/mapmelon-logo.webp' },
  { name: 'Outsite', url: 'https://www.outsite.co/', logo: '/images/outsite-logo.svg' },
  { name: 'Nomad Train', url: 'https://nomadtrain.co/', logo: '/images/nomad-train-logo.svg' },
  { name: 'Nomadwise.io', url: 'https://www.nomadwise.io/', logo: '/images/nomadwise-logo.webp' },
  { name: 'Rent Remote', url: 'https://rentremote.com/', logo: '/images/rent-remote-logo.webp' },
  {
    name: 'Nomad Cruise',
    url: 'https://www.nomadcruise.com/?ref=7432&utm_source=aff',
    logo: '/images/nomad-cruise-logo.webp',
  },
  {
    name: 'Pangea',
    url: 'https://www.thepangea.app/',
    logo: '/images/pangea-logo.webp',
  },
  {
    name: 'The Nomad World',
    url: 'https://thenomadworld.org/',
    logo: '/partners/nomad-world.png',
  },
  { name: 'Madeira Friends', url: 'https://madeirafriends.org/', logo: '/images/madeira-friends-logo.webp' },
  { name: 'Betahaus', url: 'https://www.betahaus.com/', logo: '/images/betahaus-logo.webp' },
]
---

<section class="py-64">
  <div class="container mx-auto px-4 text-center">
    <h2 animate-fade-in-up class="mb-16 text-5xl font-bold opacity-0">Our Partners</h2>
    <div class="grid grid-cols-2 items-center justify-items-center gap-x-8 gap-y-12 md:grid-cols-3 lg:grid-cols-4">
      {
        partners.map((partner) => (
          <a animate-fade-in-up href={partner.url} target="_blank" rel="noopener noreferrer" class="flex items-center justify-center opacity-0">
            <img
              src={partner.logo}
              alt={`${partner.name} logo`}
              class="h-12 min-h-[48px] w-auto max-w-[150px] min-w-[100px] object-contain grayscale transition duration-300 hover:grayscale-0"
            />
          </a>
        ))
      }
    </div>
  </div>
</section>
