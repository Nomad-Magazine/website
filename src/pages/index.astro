---
import About from '~/components/About.astro'
import Bridge from '~/components/Bridge.astro'
import CheckIcon from '~icons/ic/baseline-check'
import OurTeam from '~/components/OurTeam.astro'
import Welcome from '~/components/Welcome.astro'
import Mission from '~/components/Mission.astro'
import Partners from '~/components/Partners.astro'
import Subscribe from '~/components/Subscribe.astro'
import GetInvolved from '~/components/GetInvolved.astro'
import FooterLinks from '~/components/FooterLinks.astro'
import Testimonials from '~/components/Testimonials.astro'
import ThirdEdition from '~/components/ThirdEdition.astro'
import PastEditions from '~/components/PastEditions.astro'
import Layout, { type SEOProps } from '~/layouts/Layout.astro'
import BrandPlacement from '~/components/BrandPlacement.astro'
import MagazinePreview from '~/components/MagazinePreview.astro'
import GrowingCommunity from '~/components/GrowingCommunity.astro'

const seo: SEOProps = {
  title: 'Nomad Magazine - The First Global Digital Nomad Magazine',
  description: 'The first global digital nomad magazine. For people who work and live everywhere (or dream of it). Inspiring stories from nomads around the world.',
  image: `${Astro.site}images/187987f5-e9fc-4a74-b6ef-304b3d4a92e2.webp`,
  keywords: 'digital nomad magazine, remote work, nomad lifestyle, travel, coworking, nomad community, global nomads',
  ldJSON: {
    '@context': 'https://schema.org',
    '@type': 'WebSite',
    name: 'Nomad Magazine',
    url: Astro.site,
    description: 'The first global digital nomad magazine',
    publisher: {
      '@type': 'Organization',
      name: 'Nomad Magazine',
      logo: {
        '@type': 'ImageObject',
        url: `${Astro.site}logo.svg`,
      },
    },
    potentialAction: {
      '@type': 'SubscribeAction',
      target: `${Astro.site}newsletter`,
    },
  },
}
---

<Layout seo={seo}>
  <div class="mx-auto max-w-7xl px-4 py-8 sm:py-12 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 items-center gap-8 sm:gap-16 lg:grid-cols-2">
      <div class="space-y-6 sm:space-y-8">
        <div class="space-y-4 sm:space-y-6">
          <p class="font-justme text-4xl text-gray-800">the first global digital nomad magazine</p>
          <h1 class="md:text-12xl xl:text-22xl text-7xl font-semibold text-gray-900 xl:leading-18">This magazine will show you the Digital Nomad World ðŸŒ´</h1>
          <div class="space-y-3 text-lg text-gray-700">
            <p class="flex items-center">
              <CheckIcon class="mr-2 h-6 w-6 flex-shrink-0 text-black" />
              <span>For people who work and live everywhere (or dream of it)</span>
            </p>
            <p class="flex items-center">
              <CheckIcon class="mr-2 h-6 w-6 flex-shrink-0 text-black" />
              <span>Inspiring stories from nomads around the world</span>
            </p>
            <p class="flex items-center">
              <CheckIcon class="mr-2 h-6 w-6 flex-shrink-0 text-black" />
              <span>Updates on trends shaping the future of work and living</span>
            </p>
          </div>
        </div>
        <div class="space-y-4">
          <div class="mb-2 flex flex-col gap-4 sm:flex-row sm:items-end">
            <div class="flex flex-col items-center order-first sm:order-last">
              <span class="mb-1 inline-block rounded-full bg-yellow-400 px-3 py-1 text-xs font-bold text-black uppercase tracking-wide shadow">Latest Edition</span>
              <a
                href="/third-edition"
                class="glow-animate w-full sm:w-auto inline-block rounded border-2 border-yellow-400 bg-black px-6 sm:px-8 py-3 text-center text-base sm:text-lg font-extrabold text-yellow-400 transition-colors duration-200 hover:bg-yellow-400 hover:text-black focus:outline-none focus:ring-2 focus:ring-yellow-300"
              >
                NEW EDITION >>
              </a>
            </div>
            <a
              href="/editions"
              class="w-full sm:w-auto inline-block rounded bg-yellow-400 px-6 sm:px-8 py-3 text-center text-base sm:text-lg font-extrabold text-black shadow-md transition-transform duration-200 hover:scale-105 hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-yellow-300 order-last sm:order-first"
            >
              VIEW ALL EDITIONS
            </a>
          </div>
          <div class="mt-2 text-xs sm:text-sm text-gray-700">
            P.S. It's nice to get away from screens once in a while!
          </div>
        </div>
      </div>
      <div class="flex justify-center lg:justify-end order-first lg:order-last">
        <img 
          src="/images/187987f5-e9fc-4a74-b6ef-304b3d4a92e2.webp" 
          alt="Person holding Nomad Magazine issues" 
          class="h-auto max-w-full rounded-lg shadow-lg object-cover" 
        />
      </div>
    </div>
  </div>
  <div class="relative">
    <img src="/images/paper-cut.webp" alt="" class="w-full" loading="lazy" />
  </div>
  <div class="bg-hoverw text-white">
    <ThirdEdition />
    <PastEditions />
    <MagazinePreview />
    <Partners />
    <Testimonials />
    <About />
    <GrowingCommunity />
    <Mission />
    <Bridge />
    <Welcome />
  </div>
  <OurTeam />
  <div class="bg-hoverw text-white">
    <BrandPlacement />
    <Subscribe tag="home" />
  </div>
  <div class="bg-gray-50">
    <GetInvolved />
    <FooterLinks />
  </div>
</Layout>

<style>
@keyframes glow {
  0% { box-shadow: 0 0 0 0 #fde047; }
  50% { box-shadow: 0 0 16px 4px #fde047; }
  100% { box-shadow: 0 0 0 0 #fde047; }
}
.glow-animate {
  animation: glow 1.5s infinite;
}
</style>
