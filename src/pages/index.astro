---
import About from '~/components/About.astro'
import Bridge from '~/components/Bridge.astro'
import CheckIcon from '~icons/ic/baseline-check'
import OurTeam from '~/components/OurTeam.astro'
import Welcome from '~/components/Welcome.astro'
import Mission from '~/components/Mission.astro'
import Partners from '~/components/Partners.astro'
import Subscribe from '~/components/Subscribe.astro'
import GetInvolved from '~/components/GetInvolved.astro'
import FooterLinks from '~/components/FooterLinks.astro'
import Testimonials from '~/components/Testimonials.astro'
import ThirdEdition from '~/components/ThirdEdition.astro'
import PastEditions from '~/components/PastEditions.astro'
import Layout, { type SEOProps } from '~/layouts/Layout.astro'
import BrandPlacement from '~/components/BrandPlacement.astro'
import MagazinePreview from '~/components/MagazinePreview.astro'
import GrowingCommunity from '~/components/GrowingCommunity.astro'

// YouTube channel videos
const youtubeVideos = [
  {
    id: 'pgTpfH7zNVs',
    title: 'Why Digital Nomads Are Choosing Buenos Aires in 2025',
    description: 'Discover what makes Buenos Aires a top destination for digital nomads in 2025.',
    thumbnail: 'https://img.youtube.com/vi/pgTpfH7zNVs/hqdefault.jpg',
    duration: '18:45',
    views: '12.3K',
    publishedAt: '2025-01-20'
  },
  {
    id: 'NgG92Q8Uxgg',
    title: 'Why Digital Nomads Choosing Madeira in 2024: Madeira Friends Founders and Community',
    description: 'Meet the founders behind Madeira Friends and discover why digital nomads are flocking to this Portuguese island.',
    thumbnail: 'https://img.youtube.com/vi/NgG92Q8Uxgg/hqdefault.jpg',
    duration: '14:22',
    views: '8.7K',
    publishedAt: '2025-01-18'
  },
  {
    id: '_sBXTskL0gA',
    title: 'Why Digital Nomads Choose Chiang Mai?',
    description: 'Exploring what makes Chiang Mai, Thailand one of the top destinations for digital nomads worldwide.',
    thumbnail: 'https://img.youtube.com/vi/_sBXTskL0gA/hqdefault.jpg',
    duration: '16:33',
    views: '15.9K',
    publishedAt: '2025-01-15'
  }
]

const seo: SEOProps = {
  title: 'Nomad Magazine - The First Global Digital Nomad Magazine',
  description: 'The first global digital nomad magazine. For people who work and live everywhere (or dream of it). Inspiring stories from nomads around the world.',
  image: `${Astro.site}images/187987f5-e9fc-4a74-b6ef-304b3d4a92e2.webp`,
  keywords: 'digital nomad magazine, remote work, nomad lifestyle, travel, coworking, nomad community, global nomads',
  ldJSON: {
    '@context': 'https://schema.org',
    '@type': 'WebSite',
    name: 'Nomad Magazine',
    url: Astro.site,
    description: 'The first global digital nomad magazine',
    publisher: {
      '@type': 'Organization',
      name: 'Nomad Magazine',
      logo: {
        '@type': 'ImageObject',
        url: `${Astro.site}logo.svg`,
      },
    },
    potentialAction: {
      '@type': 'SubscribeAction',
      target: `${Astro.site}newsletter`,
    },
  },
}
---

<Layout seo={seo}>
  <div class="mx-auto max-w-7xl px-4 py-8 sm:py-12 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 items-center gap-8 sm:gap-16 lg:grid-cols-2">
      <div class="space-y-6 sm:space-y-8">
        <div class="space-y-4 sm:space-y-6">
          <p class="font-justme text-4xl text-gray-800">the first global digital nomad magazine</p>
          <h1 class="md:text-12xl xl:text-22xl text-7xl font-semibold text-gray-900 xl:leading-18">This magazine will show you the Digital Nomad World ðŸŒ´</h1>
          <div class="space-y-3 text-lg text-gray-700">
            <p class="flex items-center">
              <CheckIcon class="mr-2 h-6 w-6 flex-shrink-0 text-black" />
              <span>For people who work and live everywhere (or dream of it)</span>
            </p>
            <p class="flex items-center">
              <CheckIcon class="mr-2 h-6 w-6 flex-shrink-0 text-black" />
              <span>Inspiring stories from <a href="/blog/nomadic-living-and-ikigai-finding-your-why" class="text-gray-800 hover:text-gray-900">nomads around the world</a></span>
            </p>
            <p class="flex items-center">
              <CheckIcon class="mr-2 h-6 w-6 flex-shrink-0 text-black" />
              <span>Updates on <a href="/blog/what-are-the-trending-digital-nomad-cities" class="text-gray-800 hover:text-gray-900">trends shaping the future of work</a> and living</span>
            </p>
          </div>
        </div>
        <div class="space-y-4">
          <div class="mb-2 flex flex-col gap-4 sm:flex-row sm:items-end">
            <div class="flex flex-col items-center order-first sm:order-last">
              <span class="mb-1 inline-block rounded-full bg-yellow-400 px-3 py-1 text-xs font-bold text-black uppercase tracking-wide shadow">Latest Edition</span>
              <a
                href="/editions/third-edition"
                class="glow-animate w-full sm:w-auto inline-block rounded border-2 border-yellow-400 bg-black px-6 sm:px-8 py-3 text-center text-base sm:text-lg font-extrabold text-yellow-400 transition-colors duration-200 hover:bg-yellow-400 hover:text-black focus:outline-none focus:ring-2 focus:ring-yellow-300"
              >
                NEW EDITION >>
              </a>
            </div>
            <a
              href="/editions"
              class="w-full sm:w-auto inline-block rounded bg-yellow-400 px-6 sm:px-8 py-3 text-center text-base sm:text-lg font-extrabold text-black shadow-md transition-transform duration-200 hover:scale-105 hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-yellow-300 order-last sm:order-first"
            >
              VIEW ALL EDITIONS
            </a>
          </div>
          <div class="mt-2 text-xs sm:text-sm text-gray-700">
            P.S. It's nice to get away from screens once in a while! <a href="/blog/7-tips-for-balancing-work-and-travel" class="text-gray-800 hover:text-gray-900">Learn how to balance work and travel</a>.
          </div>
        </div>
      </div>
      <div class="flex justify-center lg:justify-end order-first lg:order-last">
        <img 
          src="/images/187987f5-e9fc-4a74-b6ef-304b3d4a92e2.webp" 
          alt="Person holding Nomad Magazine issues" 
          class="h-auto max-w-full rounded-lg shadow-lg object-cover" 
        />
      </div>
    </div>
  </div>
  <div class="relative">
    <img src="/images/paper-cut.webp" alt="" class="w-full" loading="lazy" />
  </div>
  <div class="bg-hoverw text-white">
    <ThirdEdition />
    <PastEditions />
    <MagazinePreview />
    
    <!-- YouTube Section -->
    <section class="border-b border-neutral-800 bg-neutral-900/30 px-4 py-16 sm:px-6 lg:px-8">
      <div class="mx-auto max-w-7xl">
        <div class="mb-12 flex items-center justify-between">
          <div>
            <h2 class="text-3xl font-bold text-white">Latest Videos</h2>
            <p class="mt-2 text-lg text-neutral-400">Watch our latest content on YouTube</p>
          </div>
          <a 
            href="https://www.youtube.com/@Nomad-Magazine" 
            target="_blank"
            class="inline-flex items-center gap-2 rounded-lg bg-red-600 px-4 py-2 text-sm font-bold text-white transition-all hover:bg-red-700"
          >
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
            </svg>
            Subscribe
          </a>
        </div>
        
        <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
          {youtubeVideos.map((video) => (
            <div class="group relative overflow-hidden rounded-2xl bg-neutral-900/50 transition-all hover:bg-neutral-900/80 hover:scale-105">
              <div class="relative">
                <img
                  src={video.thumbnail}
                  alt={video.title}
                  class="aspect-video w-full object-cover"
                  loading="lazy"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
                <div class="absolute bottom-2 right-2 rounded bg-black/80 px-2 py-1 text-xs text-white">
                  {video.duration}
                </div>
                <div class="absolute inset-0 flex items-center justify-center">
                  <div class="rounded-full bg-red-600 p-4 transition-all group-hover:bg-red-700 group-hover:scale-110">
                    <svg class="h-8 w-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M8 5v14l11-7z"/>
                    </svg>
                  </div>
                </div>
              </div>
              <div class="p-6">
                <h3 class="mb-2 text-lg font-bold text-white group-hover:text-yellow-400 transition-colors">
                  <a href={`https://www.youtube.com/watch?v=${video.id}`} target="_blank" class="after:absolute after:inset-0">
                    {video.title}
                  </a>
                </h3>
                <p class="text-sm text-neutral-300 line-clamp-2">
                  {video.description}
                </p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
    
    <Partners />
    <Testimonials />
    <About />
    <GrowingCommunity />
    <Mission />
    <Bridge />
    <Welcome />
  </div>
  <OurTeam />
  <div class="bg-hoverw text-white">
    <BrandPlacement />
    <Subscribe tag="home" />
  </div>
  <div class="bg-gray-50">
    <GetInvolved />
    <FooterLinks />
  </div>
</Layout>

<style>
@keyframes glow {
  0% { box-shadow: 0 0 0 0 #fde047; }
  50% { box-shadow: 0 0 16px 4px #fde047; }
  100% { box-shadow: 0 0 0 0 #fde047; }
}
.glow-animate {
  animation: glow 1.5s infinite;
}
.line-clamp-2 {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
</style>
