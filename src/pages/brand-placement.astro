---
import Layout, { type SEOProps } from '~/layouts/Layout.astro'
import CheckIcon from '~icons/ic/baseline-check'

const seo: SEOProps = {
  title: 'Brand Placement - Advertise in Nomad Magazine',
  description: 'Advertise your brand in Nomad Magazine and reach the global digital nomad community. Choose from various ad sizes: full page, double page, 1/3 vertical, and 1/5 horizontal.',
  image: `${Astro.site}images/c130ebce-d432-4e72-bb92-aee662c69777.webp`,
  keywords: 'nomad magazine advertising, digital nomad marketing, print magazine ads, brand placement, nomad community advertising',
  ogType: 'website',
  ldJSON: {
    '@context': 'https://schema.org',
    '@type': 'WebPage',
    name: 'Brand Placement - Nomad Magazine',
    description: 'Advertise your brand in Nomad Magazine',
    url: `${Astro.site}brand-placement`,
    publisher: {
      '@type': 'Organization',
      name: 'Nomad Magazine',
      logo: {
        '@type': 'ImageObject',
        url: `${Astro.site}logo.svg`,
      },
    },
  },
}

const adSizes = [
  {
    id: 'double-page',
    name: 'Double Page Spread',
    description: 'Maximum impact with a full double-page spread',
    size: '400mm x 245mm (+ 3mm bleed)',
    features: [
      'Prime placement opportunities',
      'Maximum brand visibility',
      'Premium positioning',
      'Design support included'
    ],
    example: '/images/c130ebce-d432-4e72-bb92-aee662c69777.webp'
  },
  {
    id: 'full-page',
    name: 'Full Page',
    description: 'Complete page dedicated to your brand',
    size: '200mm x 245mm (+ 3mm bleed)',
    features: [
      'Full creative control',
      'High-impact placement',
      'Professional design support',
      'Multiple placement options'
    ],
    example: '/images/edition-003-cover.webp',
    popular: true
  },
  {
    id: 'vertical-third',
    name: '1/3 Vertical',
    description: 'Elegant vertical format for brand storytelling',
    size: '67mm x 245mm (+ 3mm bleed)',
    features: [
      'Perfect for product showcases',
      'Story-format friendly',
      'Great readability',
      'Cost-effective option'
    ],
    example: '/images/edition-001-open-magazine.avif'
  },
  {
    id: 'horizontal-fifth',
    name: '1/5 Horizontal',
    description: 'Compact horizontal placement',
    size: '200mm x 100mm (+ 3mm bleed)',
    features: [
      'Banner-style placement',
      'Footer/header positioning',
      'Logo and tagline focus',
      'Budget-friendly option'
    ],
    example: '/images/nomad-directory.webp'
  },
  {
    id: 'nomad-directory',
    name: 'Nomad Directory',
    description: 'Feature your brand in our curated nomad directory',
    size: 'Digital listing',
    features: [
      'Online directory placement',
      'Company profile with logo',
      'Direct link to your website',
      'Searchable by category'
    ],
    example: '/images/edition-003-nomad-directory.webp'
  }
]

const testimonials = [
  {
    company: 'Outsite',
    quote: 'Advertising in Nomad Magazine connected us directly with our target audience. The response was incredible!',
    logo: '/images/outsite-logo.svg'
  },
  {
    company: 'Nomad Train',
    quote: 'The quality of leads from Nomad Magazine subscribers is outstanding. Best ROI we\'ve seen.',
    logo: '/images/nomad-train-logo.svg'
  }
]

const sponsors = [
  // Edition 2 sponsors
  {
    link: 'https://www.tulsaremote.com/',
    image: '/images/Tulsa_Remote_logo.webp',
    alt: 'Tulsa Remote',
    width: '90',
  },
  {
    link: 'https://www.nomadcruise.com/',
    image: '/images/nomad_cruise_logo.webp',
    alt: 'Nomad Cruise',
    width: '120',
  },
  // Edition 3 sponsors
  {
    link: 'https://www.globaltaxmastery.com/',
    image: '/images/fresh-global-logo.webp',
    alt: 'Fresh Global',
    width: '120',
  },
  {
    link: 'https://www.outsite.co/',
    image: '/images/outsite-logo.svg',
    alt: 'Outsite',
    width: '120',
  },
  {
    link: 'https://nomadtrain.co/',
    image: '/images/nomad-train-logo.svg',
    alt: 'Nomad Train Logo',
    width: '100',
  },
  {
    link: 'https://nomads.insure/',
    image: '/images/b5a18d61-7148-40c5-ba44-3b1e9baf792c.webp',
    alt: 'Nomads Insure',
    width: '100',
  },
  {
    link: 'http://nosolo.co/',
    image: '/images/nosolo-logo-1018.webp',
    alt: 'NoSolo',
    width: '100',
    srcset:
      '/images/nosolo-logo-500.webp 500w, /images/nosolo-logo-800.webp 800w, /images/nosolo-logo-1018.webp 1018w',
  },
  {
    link: 'https://nomadnest.com/',
    image: '/images/bb7b2ad2-0628-40ce-9eab-3348b65cabdb.webp',
    alt: 'NomadNest',
    width: '100',
    srcset:
      '/images/bf6699d8-00c6-4d54-8233-05fa15ef738d.webp 500w, /images/32f3c98a-5181-4c4c-9a60-c89778b15997.webp 800w, /images/4a82a9e3-b02f-4807-9a13-d3bd5905a5c7.webp 1080w, /images/bb7b2ad2-0628-40ce-9eab-3348b65cabdb.webp 2425w',
  },
]
---

<Layout seo={seo}>
  <!-- Hero Section -->
  <div class="bg-hoverw text-white">
    <div class="mx-auto max-w-7xl px-4 py-20 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 items-center gap-12 lg:grid-cols-2">
        <div class="space-y-8">
          <div class="space-y-6">
            <h1 class="text-5xl font-bold leading-tight md:text-6xl lg:text-7xl">
              Reach the Global <span class="text-yellow-400">Digital Nomad</span> Community
            </h1>
                         <p class="text-xl text-gray-300 leading-relaxed">
               Advertise in the first global digital nomad magazine. Your brand will reach over 3,000+ engaged nomads, remote workers, and travel enthusiasts across over 20 cities.
             </p>
          </div>
          
          <div class="space-y-4">
            <div class="flex items-center text-lg">
              <CheckIcon class="mr-3 h-6 w-6 flex-shrink-0 text-yellow-400" />
              <span>Distributed in 100+ coworking spaces & colivings</span>
            </div>
            <div class="flex items-center text-lg">
              <CheckIcon class="mr-3 h-6 w-6 flex-shrink-0 text-yellow-400" />
              <span>Featured at major nomad events worldwide</span>
            </div>
            <div class="flex items-center text-lg">
              <CheckIcon class="mr-3 h-6 w-6 flex-shrink-0 text-yellow-400" />
              <span>High-quality print with premium paper</span>
            </div>
          </div>

          <div class="flex flex-col gap-4 sm:flex-row">
                          <a
                href="https://calendly.com/nomadgossip"
                target="_blank"
                class="inline-block rounded bg-yellow-400 px-8 py-4 text-center text-lg font-bold text-black transition-transform duration-200 hover:scale-105 hover:shadow-lg"
              >
                Talk with us
              </a>
          </div>
        </div>
        
        <div class="flex justify-center">
          <img 
            src="/images/c130ebce-d432-4e72-bb92-aee662c69777.webp" 
            alt="Nomad Magazine brand placement example" 
            class="rounded-lg shadow-2xl max-w-full h-auto"
            loading="eager"
          />
        </div>
      </div>
    </div>
  </div>

  <!-- Statistics Section -->
  <div class="bg-neutral-900 text-white py-16">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-2 gap-8 md:grid-cols-4">
        <div class="text-center">
          <div class="text-4xl font-bold text-yellow-400 mb-2">3,000+</div>
          <div class="text-gray-300">Readers</div>
        </div>
        <div class="text-center">
          <div class="text-4xl font-bold text-yellow-400 mb-2">100+</div>
          <div class="text-gray-300">Distribution Points</div>
        </div>
        <div class="text-center">
          <div class="text-4xl font-bold text-yellow-400 mb-2">20+</div>
          <div class="text-gray-300">Cities Reached</div>
        </div>
        <div class="text-center">
          <div class="text-4xl font-bold text-yellow-400 mb-2">85%</div>
          <div class="text-gray-300">Print Readership</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Why Print Over Digital Section -->
  <div class="bg-white py-20">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-6 md:text-5xl">Why Print Beats Digital</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          In a world flooded with digital noise, print advertising delivers something digital can't: genuine impact and lasting impression.
        </p>
      </div>

      <div class="grid grid-cols-1 gap-12 lg:grid-cols-2 items-center">
        <div class="space-y-8">
          <div class="flex items-start space-x-4">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-yellow-400 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
            </div>
            <div>
              <h3 class="text-xl font-bold text-gray-900 mb-2">Builds Instant Trust & Credibility</h3>
              <p class="text-gray-600">Print advertising has a 70% higher brand recall than digital ads. When nomads see your brand in a physical magazine, it signals legitimacy and permanence that digital ads simply can't match.</p>
            </div>
          </div>

          <div class="flex items-start space-x-4">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-yellow-400 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                </svg>
              </div>
            </div>
            <div>
                             <h3 class="text-xl font-bold text-gray-900 mb-2">Zero Ad Blockers, 100% Visibility</h3>
               <p class="text-gray-600">While 60-75% of digital nomads use ad blockers (due to their tech-savvy, privacy-conscious habits), print ads get seen by every reader. No skipping, no blocking, no competing with endless scroll feeds. Your message gets the attention it deserves.</p>
            </div>
          </div>

          <div class="flex items-start space-x-4">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-yellow-400 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
                </svg>
              </div>
            </div>
            <div>
              <h3 class="text-xl font-bold text-gray-900 mb-2">Premium Status Symbol</h3>
              <p class="text-gray-600">Being featured in a curated print magazine positions your brand as premium and exclusive. It's a status symbol that digital ads can't replicate - your brand becomes part of something nomads want to keep and share.</p>
            </div>
          </div>

          <div class="flex items-start space-x-4">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-yellow-400 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
            </div>
            <div>
                             <h3 class="text-xl font-bold text-gray-900 mb-2">Longer Engagement Time & Lasting Value</h3>
               <p class="text-gray-600">Digital ads get 2-3 seconds of attention. Print ads in magazines get 15-30 minutes of focused reading time. Plus, magazines live on coffee tables in coworking spaces and colivings for years - meaning your ad gets seen repeatedly by new nomads. Your cost per view decreases to nearly zero over time, while digital ads require constant spending.</p>
            </div>
          </div>
        </div>

        <div class="lg:pl-8">
          <div class="bg-gradient-to-br from-gray-50 to-gray-100 rounded-2xl p-8 shadow-lg">
            <div class="mb-6">
              <h3 class="text-2xl font-bold text-gray-900 mb-4">The Cool Factor That Digital Can't Match</h3>
              <p class="text-gray-600 mb-6">
                Print magazines are experiencing a renaissance among digital nomads. They're tired of screens and crave something tangible, authentic, and real. Your brand in print says:
              </p>
              
              <div class="space-y-3">
                <div class="flex items-center">
                  <CheckIcon class="mr-3 h-5 w-5 text-green-500" />
                  <span class="text-gray-700 font-medium">"We're established and here to stay"</span>
                </div>
                <div class="flex items-center">
                  <CheckIcon class="mr-3 h-5 w-5 text-green-500" />
                  <span class="text-gray-700 font-medium">"We value quality over quantity"</span>
                </div>
                <div class="flex items-center">
                  <CheckIcon class="mr-3 h-5 w-5 text-green-500" />
                  <span class="text-gray-700 font-medium">"We're worth the investment"</span>
                </div>
                <div class="flex items-center">
                  <CheckIcon class="mr-3 h-5 w-5 text-green-500" />
                  <span class="text-gray-700 font-medium">"We understand what nomads actually want"</span>
                </div>
              </div>
            </div>
            
            <div class="bg-white rounded-lg p-6 border-l-4 border-yellow-400">
              <div class="flex items-center mb-3">
                <div class="text-3xl mr-3">ðŸ“ˆ</div>
                <div>
                  <h4 class="font-bold text-gray-900">Real Results</h4>
                  <p class="text-sm text-gray-600">Print ads generate 2.5x more leads than digital ads in the travel industry</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Sponsors Section -->
  <div class="bg-black py-16">
    <div class="mx-auto max-w-5xl px-4">
      <p class="mb-10 text-center text-2xl font-semibold text-white">Trusted by Leading Nomad Brands</p>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 items-center justify-items-center">
        {sponsors.slice(0, 4).map((sponsor) => (
          <a href={sponsor.link} target="_blank" class="flex justify-center">
            <img width={sponsor.width} alt={sponsor.alt} src={sponsor.image} loading="lazy" srcset={sponsor.srcset} />
          </a>
        ))}
      </div>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 items-center justify-items-center mt-8">
        {sponsors.slice(4, 8).map((sponsor) => (
          <a href={sponsor.link} target="_blank" class="flex justify-center">
            <img width={sponsor.width} alt={sponsor.alt} src={sponsor.image} loading="lazy" srcset={sponsor.srcset} />
          </a>
        ))}
      </div>
    </div>
  </div>

  <!-- Ad Sizes Section -->
  <div id="pricing" class="bg-gray-50 py-20">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
             <div class="text-center mb-16">
         <h2 class="text-4xl font-bold text-gray-900 mb-6 md:text-5xl">Advertising Options</h2>
         <p class="text-xl text-gray-600 max-w-3xl mx-auto">
           Choose the perfect placement option for your brand.
         </p>
       </div>

      <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
        {adSizes.map((ad) => (
                    <div class={`relative overflow-hidden rounded-2xl bg-white p-8 shadow-lg transition-all duration-300 hover:shadow-2xl hover:-translate-y-1 flex flex-col h-full ${ad.popular ? 'ring-4 ring-yellow-400' : ''}`}>
            {ad.popular && (
              <div class="absolute top-0 right-0 bg-yellow-400 text-black px-4 py-2 text-sm font-bold rounded-bl-lg">
                Most Popular
              </div>
            )}
            
            <div class="mb-6">
               <img
                 src={ad.example}
                 alt={`${ad.name} example`}
                 class="w-full h-64 object-cover rounded-lg"
                 loading="lazy"
               />
             </div>

             <div class="space-y-4 flex-grow">
               <div>
                 <h3 class="text-2xl font-bold text-gray-900 mb-2">{ad.name}</h3>
                 <p class="text-gray-600 mb-2">{ad.description}</p>
                 <p class="text-sm text-gray-500">Size: {ad.size}</p>
               </div>

               <div class="space-y-2">
                 {ad.features.map((feature) => (
                   <div class="flex items-center">
                     <CheckIcon class="mr-2 h-5 w-5 text-green-500" />
                     <span class="text-gray-700">{feature}</span>
                   </div>
                 ))}
               </div>
             </div>

             <div class="pt-4 border-t border-gray-200 mt-auto">
               <a
                 href="https://calendly.com/nomadgossip"
                 target="_blank"
                 class={`block w-full text-center py-3 px-6 rounded-lg font-semibold transition-colors ${
                   ad.popular 
                     ? 'bg-yellow-400 text-black hover:bg-yellow-500' 
                     : 'bg-gray-900 text-white hover:bg-gray-800'
                 }`}
                                >
                   Talk with us
                 </a>
             </div>
           </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Process Section -->
  <div class="bg-hoverw text-white py-20">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold mb-6 md:text-5xl">How It Works</h2>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto">
          Simple process from booking to publication
        </p>
      </div>

      <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
        <div class="text-center space-y-4">
          <div class="w-16 h-16 bg-yellow-400 rounded-full flex items-center justify-center mx-auto text-black text-2xl font-bold">
            1
          </div>
                     <h3 class="text-xl font-bold">Talk with us</h3>
           <p class="text-gray-300">
             Schedule a consultation to discuss your advertising goals and choose the perfect size and placement.
           </p>
        </div>

        <div class="text-center space-y-4">
          <div class="w-16 h-16 bg-yellow-400 rounded-full flex items-center justify-center mx-auto text-black text-2xl font-bold">
            2
          </div>
                     <h3 class="text-xl font-bold">Design & Approve</h3>
           <p class="text-gray-300">
             You create your design and we review it to ensure it meets our quality standards and printing requirements.
           </p>
        </div>

        <div class="text-center space-y-4">
          <div class="w-16 h-16 bg-yellow-400 rounded-full flex items-center justify-center mx-auto text-black text-2xl font-bold">
            3
          </div>
          <h3 class="text-xl font-bold">Publish & Distribute</h3>
          <p class="text-gray-300">
            Your ad goes live in the magazine and reaches thousands of nomads across the globe.
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Testimonials Section -->
  <div class="bg-white py-20">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-6 md:text-5xl">What Our Partners Say</h2>
      </div>

      <div class="grid grid-cols-1 gap-8 md:grid-cols-2">
        {testimonials.map((testimonial) => (
          <div class="bg-gray-50 rounded-2xl p-8">
            <div class="flex items-center mb-6">
              <img
                src={testimonial.logo}
                alt={`${testimonial.company} logo`}
                class="h-12 object-contain grayscale"
              />
            </div>
            <blockquote class="text-lg text-gray-700 italic mb-4">
              "{testimonial.quote}"
            </blockquote>
            <cite class="text-gray-600 font-semibold">â€” {testimonial.company}</cite>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- FAQ Section -->
  <div class="bg-gray-50 py-20">
    <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-6">Frequently Asked Questions</h2>
      </div>

      <div class="space-y-8">
        <div class="bg-white rounded-lg p-6">
          <h3 class="text-xl font-bold text-gray-900 mb-3">What's included in the advertising package?</h3>
          <p class="text-gray-700">
            All packages include premium placement in our print magazine, professional design support (if needed), 
            high-quality printing, and distribution across our global network of coworking spaces and events.
          </p>
        </div>

        <div class="bg-white rounded-lg p-6">
          <h3 class="text-xl font-bold text-gray-900 mb-3">How far in advance should I book?</h3>
          <p class="text-gray-700">
            We recommend booking at least 6-8 weeks before your desired publication date to ensure optimal placement 
            and allow time for design collaboration.
          </p>
        </div>

        <div class="bg-white rounded-lg p-6">
          <h3 class="text-xl font-bold text-gray-900 mb-3">Can you design for us?</h3>
          <p class="text-gray-700">
            Yes! We can create a custom design for you, or you're welcome to provide your own. Design services are quoted based on your specific requirements and will be discussed during our consultation call.
          </p>
        </div>

        <div class="bg-white rounded-lg p-6">
          <h3 class="text-xl font-bold text-gray-900 mb-3">What file formats do you accept?</h3>
          <p class="text-gray-700">
            We accept high-resolution PDF, AI, PSD, and PNG files. All ads should be 300 DPI for optimal print quality. 
            We'll provide detailed specifications after booking.
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- CTA Section -->
  <div class="bg-hoverw text-white py-20">
    <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-4xl font-bold mb-6 md:text-5xl">Ready to Reach the Nomad Community?</h2>
      <p class="text-xl text-gray-300 mb-8 leading-relaxed">
        Join brands like Outsite, Nomad Train, and others who trust Nomad Magazine to connect with their target audience.
      </p>
      
      <div class="flex flex-col gap-4 sm:flex-row sm:justify-center">
        <a
          href="https://calendly.com/nomadgossip"
          target="_blank"
          class="inline-block rounded bg-yellow-400 px-8 py-4 text-lg font-bold text-black transition-transform duration-200 hover:scale-105 hover:shadow-lg"
        >
          Schedule Consultation
        </a>
        <a
          href="mailto:lera@nomadgossip.com"
          class="inline-block rounded border-2 border-yellow-400 px-8 py-4 text-lg font-bold text-yellow-400 transition-colors duration-200 hover:bg-yellow-400 hover:text-black"
        >
          Email Us
        </a>
      </div>
    </div>
  </div>
</Layout>

<style>
  .glow-animate {
    animation: glow 1.5s infinite;
  }
  
  @keyframes glow {
