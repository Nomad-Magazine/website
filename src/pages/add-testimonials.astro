---
import Layout, { type SEOProps } from '~/layouts/Layout.astro'



// Placeholder URLs for "Seen at" logos
const seenAtLogos = [
  {
    name: 'Running Remote',
    url: '/images/815db8c6-7353-4b12-9a93-f0a728562953.svg',
  },
  {
    name: 'Nomad Cruise',
    url: 'https://cdn.prod.website-files.com/64ec95e0eddd7b775369e9e7/6671b75af213e30559f1bf19_Mask%20group%20(1).svg',
  },
  {
    name: 'Island Tribe',
    url: '/images/nomad_island_fest.webp',
  },
]

const seo: SEOProps = {
  title: 'Add Your Testimonial - Share Your Nomad Magazine Experience',
  description: 'Share your experience with Nomad Magazine! Tell us what you love about NGM and help inspire other digital nomads in our community.',
  image: `${Astro.site}images/magazine-hold-against-chest.webp`,
  keywords: 'nomad magazine testimonial, nomad magazine review, digital nomad feedback, nomad community testimonials',
  ogType: 'website',
  ldJSON: {
    '@context': 'https://schema.org',
    '@type': 'WebPage',
    name: 'Add Testimonial - Nomad Magazine',
    description: 'Share your testimonial about Nomad Magazine',
    url: `${Astro.site}add-testimonials`,
    publisher: {
      '@type': 'Organization',
      name: 'Nomad Magazine',
      logo: {
        '@type': 'ImageObject',
        url: `${Astro.site}logo.svg`,
      },
    },
  },
}
---

<Layout seo={seo}>

  <!-- Form Container -->
  <div class="rounded-2xl bg-gray-50 py-24">
    <iframe src="https://form.smartsuite.com/s4tmc086/cNnFe6QPe5?header=false" width="100%" height="600px" frameborder="0"></iframe>
  </div>
  <!-- Seen At Section -->
  <div
    class="flex flex-row flex-wrap items-end justify-center gap-4 bg-[url('https://cdn.prod.website-files.com/64ec95e0eddd7b775369e9e7/652fbc20671bc02c2d3be4e4_Mask%20group%20(1).webp')] bg-cover py-4 pt-24"
  >
    <span class="text-neutral-400">Seen at:</span>
    {seenAtLogos.map((logo) => <img src={logo.url} alt={logo.name} class="h-8 object-contain" />)}
  </div>
</Layout>
