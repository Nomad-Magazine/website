---
import Layout, { type SEOProps } from '~/layouts/Layout.astro'
import MagazineIssues from '~/components/MagazineIssues.astro'
import MagazinePreview from '~/components/MagazinePreview.astro'

const seo: SEOProps = {
  title: 'Support the Magazine - Keep Independent Publishing Alive',
  description:
    'Support Nomad Magazine and help keep independent publishing alive! Get closer access to our team, exclusive content, and help sustain quality journalism for digital nomads.',
  image: `${Astro.site}images/edition-003-cover_holded_front_face.webp`,
  keywords: 'support nomad magazine, independent publishing, digital nomad journalism, magazine subscription, nomad community support',
  ogType: 'website',
  ldJSON: {
    '@context': 'https://schema.org',
    '@type': 'WebPage',
    name: 'Support the Magazine',
    description: 'Support independent publishing and keep Nomad Magazine going',
    url: `${Astro.site}support-the-magazine`,
    publisher: {
      '@type': 'Organization',
      name: 'Nomad Magazine',
      logo: {
        '@type': 'ImageObject',
        url: `${Astro.site}logo.svg`,
      },
    },
    potentialAction: {
      '@type': 'SubscribeAction',
      target: 'https://buy.stripe.com/fZubJ17Mh7zBbkG9G18bS0c',
    },
  },
}
---

<Layout seo={seo}>
  <div class="bg-hoverw text-white">
    <!-- Support Hero Section -->
    <section class="py-24">
      <div class="mx-auto px-4 text-center">
        <p class="font-justme text-4xl text-yellow-400">Support the Magazine</p>
        <h1 class="mt-4 text-5xl font-bold sm:text-6xl">
          Support Independent Publishing<br />Keep the Magazine Going
        </h1>
        <p class="mx-auto mt-6 max-w-2xl text-lg text-neutral-300">
          By becoming a supporter, you get closer access to us. Whether you're a digital nomad looking for tips or recommendations, or a brand hoping to get featured — we've got
          your back. Supporters are our first priority, just like our advertisers. It's a way to say:
          <br />"Hey, I believe in what you're building" — and we'll return the favor.
        </p>
        <div class="mt-10">
          <a
            href="https://buy.stripe.com/fZubJ17Mh7zBbkG9G18bS0c"
            target="_blank"
            class="rounded-md bg-red-600 px-8 py-3 text-lg font-semibold text-white transition-colors hover:bg-red-700"
          >
            Subscribe (15€ +)
          </a>
          <a
            href="https://donate.stripe.com/5kQdR9eaFg67bkG05r8bS09"
            target="_blank"
            class="ml-4 rounded-md border border-yellow-400 px-8 py-3 text-lg font-semibold text-yellow-400 transition-colors hover:bg-yellow-400 hover:text-black"
          >
            One-time Support
          </a>
          <p class="mt-6 text-sm text-neutral-400">
            Choose any amount for one-time support
          </p>
        </div>
      </div>
    </section>
    <!-- Published Editions Section -->
    <h2 class="font-justme text-center text-5xl font-bold text-white">Published Editions</h2>
    <MagazineIssues />
    <MagazinePreview />
  </div>
</Layout>
