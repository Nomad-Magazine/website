---

<Layout seo={seo}>
  <div class="min-h-screen bg-gray-50">
    <!-- Header -->
    <div class="bg-white shadow-sm">
      <div class="mx-auto max-w-7xl px-4 py-8 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-4xl font-bold text-gray-900 sm:text-5xl">Press Kit</h1>
          <p class="mt-4 text-xl text-gray-600">Download high-resolution images and brand assets</p>
          <p class="mt-2 text-lg text-gray-500">Perfect for partners, media coverage, and promotional materials</p>
        </div>
      </div>
    </div>

    <!-- Usage Guidelines -->
    <div class="bg-yellow-50 border-l-4 border-yellow-400 mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8 mt-8">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-yellow-800">Usage Guidelines</h3>
          <div class="mt-2 text-sm text-yellow-700">
            <ul class="list-disc list-inside space-y-1">
              <li>All images are provided for promotional and editorial use</li>
              <li>Please credit "Nomad Magazine" when using these assets</li>
              <li>Do not modify logos or brand elements</li>
              <li>For commercial use, please contact us for permission</li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <!-- Filter Buttons -->
    <div class="mx-auto max-w-7xl px-4 py-8 sm:px-6 lg:px-8">
      <div class="flex flex-wrap justify-center gap-3 mb-8">
        {categories.map((category) => (
          <button
            class="filter-btn px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500 transition-all"
            data-filter={category}
          >
            {category.charAt(0).toUpperCase() + category.slice(1)}
          </button>
        ))}
      </div>

      <!-- Images Gallery -->
      <div class="mb-16">
        <h2 class="text-2xl font-bold text-gray-900 mb-8 text-center">Brand Images</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6" id="gallery">
          {brandImages.map((image) => (
            <div class="gallery-item bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow" data-category={image.category}>
