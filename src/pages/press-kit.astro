        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const filterButtons = document.querySelectorAll('.filter-btn');
    const galleryItems = document.querySelectorAll('.gallery-item');
    
    filterButtons.forEach(button => {
      button.addEventListener('click', function(this: HTMLButtonElement) {
        const filter = this.dataset.filter;
        
        // Update active button
        filterButtons.forEach(btn => btn.classList.remove('bg-yellow-400', 'text-black'));
        filterButtons.forEach(btn => btn.classList.add('bg-white', 'text-gray-700'));
        this.classList.remove('bg-white', 'text-gray-700');
        this.classList.add('bg-yellow-400', 'text-black');
        
        // Filter items
        galleryItems.forEach(item => {
          const htmlItem = item as HTMLElement;
          if (filter === 'all' || htmlItem.dataset.category === filter) {
            htmlItem.style.display = 'block';
          } else {
            htmlItem.style.display = 'none';
          }
        });
      });
    });
    
    // Set initial active state
    const firstButton = filterButtons[0] as HTMLButtonElement;
    firstButton.classList.add('bg-yellow-400', 'text-black');
    firstButton.classList.remove('bg-white', 'text-gray-700');
  });
</script> 