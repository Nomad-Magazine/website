---
import StoryIntro from '~/components/StoryIntro.astro'
import LikeProject from '~/components/LikeProject.astro'
import OurStoryHero from '~/components/OurStoryHero.astro'
import StoryTimeline from '~/components/StoryTimeline.astro'
import Layout, { type SEOProps } from '~/layouts/Layout.astro'

const seo: SEOProps = {
  title: 'Our Story - The Journey of Nomad Magazine',
  description: 'Discover the story behind Nomad Magazine. Learn about our mission to connect digital nomads worldwide through quality journalism and inspiring stories.',
  image: `${Astro.site}images/edition-003-cover_holded_front_face.webp`,
  keywords: 'nomad magazine story, nomad magazine history, digital nomad journalism, nomad community, magazine mission',
  ogType: 'website',
  ldJSON: {
    '@context': 'https://schema.org',
    '@type': 'WebPage',
    name: 'Our Story - Nomad Magazine',
    description: 'The story and mission behind Nomad Magazine',
    url: `${Astro.site}our-story`,
    publisher: {
      '@type': 'Organization',
      name: 'Nomad Magazine',
      logo: {
        '@type': 'ImageObject',
        url: `${Astro.site}logo.svg`,
      },
    },
  },
}
---

<Layout seo={seo}>
  <main>
    <OurStoryHero />
    <StoryIntro />
    <StoryTimeline />
    <LikeProject />
  </main>
  <script is:inline src="/js/jquery.js" type="text/javascript"></script>
  <script is:inline src="/js/webflow.js" type="text/javascript"></script>
</Layout>
