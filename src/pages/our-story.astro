---
import StoryIntro from '~/components/StoryIntro.astro'
import LikeProject from '~/components/LikeProject.astro'
import OurStoryHero from '~/components/OurStoryHero.astro'
import StoryTimeline from '~/components/StoryTimeline.astro'
import Layout, { type SEOProps } from '~/layouts/Layout.astro'

const seo: SEOProps = {
  title: 'Our Story - The Journey of Nomad Gossip Magazine',
  description: 'Discover the story behind Nomad Gossip Magazine. Learn about our mission to connect digital nomads worldwide through quality journalism and inspiring stories.',
  image: `${Astro.site}images/041ff422-b910-402f-9fd9-33e20d30055e.webp`,
  keywords: 'nomad magazine story, nomad gossip magazine history, digital nomad journalism, nomad community, magazine mission',
  ogType: 'website',
  ldJSON: {
    '@context': 'https://schema.org',
    '@type': 'WebPage',
    name: 'Our Story - Nomad Magazine',
    description: 'The story and mission behind Nomad Gossip Magazine',
    url: `${Astro.site}our-story`,
    publisher: {
      '@type': 'Organization',
      name: 'Nomad Magazine',
      logo: {
        '@type': 'ImageObject',
        url: `${Astro.site}logo.svg`,
      },
    },
  },
}
---

<Layout seo={seo}>
  <main>
    <OurStoryHero />
    <StoryIntro />
    <StoryTimeline />
    <LikeProject />
  </main>
</Layout>
