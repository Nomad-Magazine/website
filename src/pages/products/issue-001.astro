---
import FAQ from '~/components/FAQ.astro'
import FAQContact from '~/components/FAQContact.astro'
import PaymentPlan from '~/components/PaymentPlan.astro'
import Testimonials from '~/components/Testimonials.astro'
import Layout, { type SEOProps } from '~/layouts/Layout.astro'
import ProductCarousel from '~/components/ProductCarousel.astro'
import MagazineReadyBanner from '~/components/MagazineReadyBanner.astro'

const slides = [
  {
    src: '/images/5f3df6ca-7e00-4f77-8e10-bec4fa56e454.avif',
  },
  { src: '/images/604c06ac-bb0f-4c33-aeeb-49bad62d938f.avif' },
  { src: '/images/f5644a7e-e218-4dd2-af74-e6bab973a01c.avif' },
  { src: '/images/555be274-0119-4d08-801c-80a845b43c8f.avif' },
  { src: '/images/a6e4480e-8e2c-491f-9477-98e9987e88f8.avif' },
  { src: '/images/5c70d694-0e36-44ff-851d-51a78bb14a3e.avif' },
  { src: '/images/c777e79b-6a23-4e99-b3ba-b91962a3b07c.avif' },
]

const seo: SEOProps = {
  title: 'Issue 001 - Nomad Gossip Magazine | Digital Nomad Stories',
  description:
    'The first issue of Nomad Gossip Magazine. 100 pages of unique content, Yellow Pages directory, and exclusive nomad stories. Available in digital and print formats.',
  image: '/images/5f3df6ca-7e00-4f77-8e10-bec4fa56e454.avif',
  keywords: 'nomad magazine issue 001, digital nomad magazine, nomad gossip magazine, nomad stories, remote work magazine',
  ogType: 'website',
  ldJSON: {
    '@context': 'https://schema.org',
    '@type': 'Product',
    name: 'Nomad Gossip Magazine Issue 001',
    description: 'The first issue of Nomad Gossip Magazine with 100 pages of unique content',
    url: `${Astro.site}products/issue-001`,
    image: '/images/5f3df6ca-7e00-4f77-8e10-bec4fa56e454.avif',
    brand: {
      '@type': 'Brand',
      name: 'Nomad Gossip Magazine',
    },
    offers: [
      {
        '@type': 'Offer',
        name: 'Issue 001 (Digital Version, Single Purchase)',
        price: '14.00',
        priceCurrency: 'EUR',
        availability: 'https://schema.org/InStock',
        url: 'https://nomad-magazine.com/products/issue-001/',
        hasMerchantReturnPolicy: {
          '@type': 'MerchantReturnPolicy',
          returnPolicyCategory: 'https://schema.org/MerchantReturnNotPermitted',
        },
      },
      {
        '@type': 'Offer',
        name: 'Issue 001 (Print Version, Single Purchase)',
        price: '22.00',
        priceCurrency: 'EUR',
        availability: 'https://schema.org/InStock',
        url: 'https://buy.stripe.com/5kA3fA9vH3yd1Ko6ou',
        hasMerchantReturnPolicy: {
          '@type': 'MerchantReturnPolicy',
          returnPolicyCategory: 'https://schema.org/MerchantReturnNotPermitted',
        },
      },
    ],
    publisher: {
      '@type': 'Organization',
      name: 'Nomad Magazine',
      logo: {
        '@type': 'ImageObject',
        url: `${Astro.site}logo.svg`,
      },
    },
  },
}
---

<Layout seo={seo}>
  <MagazineReadyBanner text="The magazine is ready! We can't wait for you to read it!" />
  <section class="my-12 flex flex-col items-center justify-center gap-8 lg:flex-row">
    <!-- Carousel/Slider -->
    <div class="w-full flex-shrink-0 px-8 md:w-1/2 md:px-0">
      <ProductCarousel slides={slides} firstSlideMaxWidth={true} />
    </div>
    <!-- Product Info -->
    <div class="w-full px-8 lg:w-1/2 lg:max-w-md lg:px-0">
      <PaymentPlan
        issueNumber="ISSUE 001"
        issueDescription="The first issue of Nomad Gossip Magazine. 100 pages of unique content, Yellow Pages, and more."
        digitalPlans={[
          {
            id: 'single-purchase',
            title: 'Single Purchase',
            subtitle: 'Pay for one issue',
            features: [
              { text: 'Personal NGM account' },
              { text: 'Exclusive NGM newsletters' },
              { text: 'First to unlock the new NGM issue' },
              { text: 'Lifetime access to digital magazine' },
            ],
            price: '€14',
            url: 'https://myaccount.nomadgossip.com/registration-issue',
          },
        ]}
        printPlan={{
          id: 'print',
          title: 'Single Purchase',
          subtitle: 'Pay for one issue',
          features: [{ text: 'Printed NGM issue' }, { text: 'Exclusive NGM newsletters' }],
          price: '€22',
          priceNote: '* Delivery cost included',
          url: 'https://buy.stripe.com/5kA3fA9vH3yd1Ko6ou',
        }}
        orderButtonText="Read Now!"
      />
      <div class="mt-2 text-xs text-gray-500">
        While the digital version works on both mobile and desktop, we recommend the desktop for a more enjoyable reading experience.<br />
        All payments will be securely processed through MediaPath OÜ, the business entity of Nomad Gossip Magazine.
      </div>
    </div>
  </section>
  <div class="mx-auto my-8 max-w-3xl px-4 text-left">
    <p>
      Welcome to the first issue of Nomad Gossip Magazine (NGM). Inside, you'll find everything from the hottest nomad gossip, which destinations to hit in 2024 and how to truly
      make a positive impact wherever you plant your laptop.
    </p>
    <p>What's Coming:</p>
    <ul role="list" class="list-disc pl-6">
      <li>100 pages of unique content crafted by our editors and guest writers</li>
      <li>Yellow Pages: Digital Nomad Directory</li>
      <li>Exclusive NGM newsletters</li>
    </ul>
    <p><a href="/free-article-what-not-to-do-on-first-date" class="font-medium underline">Download sample</a></p>
  </div>
  <Testimonials sectionClass="bg-hoverw [&_h2]:text-white" />
  <FAQ />
  <FAQContact />
</Layout>
